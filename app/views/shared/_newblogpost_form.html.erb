<%= form_for(@blogpost) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
     <%= f.collection_select(:blog_id, current_user.blogs.all, :id, :title) %>
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :content %>
    </div>
    
    <div class="actions">
       <%= f.submit "Create Blogpost" %>
    </div>
<% end %>
