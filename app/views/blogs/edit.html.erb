<h1>Edit blog</h1>
    <% if signed_in? %>
     <%= form_for(@blog) do |f| %>
        <%= render 'shared/error_messages', :object => f.object %>
        <div class="field">
          <%= f.label :title %><br />
          <%= f.text_field :title %>
        </div>
        <div class="field">
          <%= f.label :description %><br />
          <%= f.text_area :description %>
       </div>
       <div class="actions">
          <%= f.submit "Update" %>
       </div>
    <% end %>
  <% else %>
   <p>
     This is my experimental Social-Multimedia-Site, you can create blogs,
     share micromessages, and comment....  
   </p>
   <%= link_to "Sign up now!", signup_path, :class => "signup_button round" %>
<% end %>
